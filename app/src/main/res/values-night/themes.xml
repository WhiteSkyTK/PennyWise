<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.PennyWise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark Theme Colors -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_green</item> <!-- **** KEY CHANGE **** -->

        <item name="headerBackground">@drawable/gradient_dark</item>

        <item name="android:textColorPrimary">?attr/colorOnSurface</item>

        <!-- Define colors for header content in DARK mode -->
        <item name="headerContentColor">@color/white</item>      <!-- e.g., White text/icons on dark gradients -->
        <item name="headerButtonBackgroundColor">@color/main_green_dark</item> <!-- Example -->
        <item name="headerButtonContentColor">@color/white</item>     <!-- Example -->

        <item name="selectedItemBackground">@color/selected_item_background2</item>

        <item name="colorBackground">@color/Semi_gray</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnBackground2">@color/green_backg</item>

        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurface2">@color/black</item>
        <item name="colorSecondary">@color/accent_purple_light</item>

        <item name="colorError">@color/expense_red</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="Theme.PennyWise.PurpleHeader" parent="Base.Theme.PennyWise"> <!-- This will inherit from the (night) Base.Theme.PennyWise -->
        <item name="headerBackground">@drawable/gradient_purple_dark</item> <!-- Provide a dark purple gradient -->
    </style>

    <style name="Theme.PennyWise.RedHeader" parent="Base.Theme.PennyWise">
        <item name="headerBackground">@drawable/gradient_red_dark</item> <!-- Provide a dark red gradient -->
    </style>
</resources>
