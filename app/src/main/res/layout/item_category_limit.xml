<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp"
    app:cardBackgroundColor="?attr/colorOnSurface2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorBackground"
            android:text="Category"
            android:fontFamily="@font/nunito_medium"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:progress="50"
            android:max="100"
            android:progressTint="@color/main_purple"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:id="@+id/limitDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorBackground"
            android:text="Min: R300"
            android:fontFamily="@font/nunito_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/limitDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorBackground"
            android:text="Max: R300"
            android:fontFamily="@font/nunito_medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textCurrentUsage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used: R150"
            android:fontFamily="@font/nunito_medium"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/optionsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="Options"
            android:textColor="?attr/colorBackground"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
