<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/aboutActivity"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AboutActivity">

    <!-- Decorative background circle -->
    <ImageView
        android:id="@+id/topCircle"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-60dp"
        android:contentDescription="@string/todo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/big_circle" />

    <!-- App Title -->
    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Wallet - Budget App"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/aboutSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Spending, Stress-Free Living"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/nunito_semibold"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/aboutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Description -->
    <TextView
        android:id="@+id/aboutDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nunito_medium"
        android:lineSpacingExtra="6dp"
        android:text="
Welcome to Wallet — your modern companion for budgeting done right.

This app is designed to help you manage your money without stress,
track your income and expenses with ease, and keep you motivated
with a clean, beautiful, and intuitive interface.

Whether you're planning, saving, or just curious where your money goes,
Wallet helps you do it smarter, not harder.

This is just the beginning. New features are coming. You're on Version 1.0 — and the journey has just begun. ✨"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aboutSubtitle" />

    <!-- Bottom Version Number -->
    <TextView
        android:id="@+id/versionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:fontFamily="@font/nunito_light"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
