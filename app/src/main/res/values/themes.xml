<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme config -->
    <style name="Base.Theme.PennyWise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light Theme Colors -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_green_dark</item>

        <!-- Define a suitable light theme variant -->
        <item name="headerBackground">@drawable/gradient_light</item>

        <!-- Define colors for header content in LIGHT mode -->
        <item name="headerContentColor">@color/black</item>       <!-- e.g., Black text/icons on light gradients -->
        <item name="headerButtonBackgroundColor">@color/main_green</item> <!-- Example -->
        <item name="headerButtonContentColor">@color/white</item>    <!-- Example -->

        <item name="selectedItemBackground">@color/selected_item_background</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnBackground2">@color/grey_backg</item>

        <item name="colorSurface">@color/light_gray</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurface2">@color/gray_text</item>
        <item name="colorSecondary">@color/accent_purple_dark</item>

        <item name="colorError">@color/expense_red</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <!-- Specific Color Themes (Light Mode Base) -->
    <style name="Theme.PennyWise.PurpleHeader" parent="Base.Theme.PennyWise">
        <item name="headerBackground">@drawable/gradient_purple</item>
        <!-- headerContentColor etc. are inherited from Base.Theme.PennyWise -->
    </style>

    <style name="Theme.PennyWise.RedHeader" parent="Base.Theme.PennyWise">
        <item name="headerBackground">@drawable/gradient_red</item>
        <!-- headerContentColor etc. are inherited from Base.Theme.PennyWise -->
    </style>

    <!-- Actual theme used -->
    <style name="Theme.PennyWise" parent="Base.Theme.PennyWise" />
</resources>
